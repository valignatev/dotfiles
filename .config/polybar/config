[colors]
background = #141021
foreground = #c4b7c5
foreground-alt = #555
secondary = #e60053

[bar/top]
width = 100%
height = 30
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

font-0 = Iosevka\ Nerd\ Font:pixelsize=14;weight=bold;0

modules-left = i3 xwindow
modules-center = xkeyboard date pomodoro
modules-right = wlan volume backlight filesystem memory cpu battery temperature

tray-position = right

[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%

[module/xkeyboard]
